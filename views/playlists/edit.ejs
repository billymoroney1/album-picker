<div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
    <div class="valign" style="width:100%;">
        <div class="container">
           <div class="row">
              <div class="col s12 m6 offset-m3">
                 <div class="card hoverable black-text pink darken-1" style="font-size:20px;">
                    <div class="card-content">
                        <span class='card-title'>Name</span>
                        <form method="POST" action="/playlists/<%=playlist.name%>/?_method=PUT">
                            <input id='name' name='name' value='<%=playlist.name%>'>
                            <input class='btn' type='submit' value='Change'>
                        </form>
                </div>
            <div class="row">
                <div class='card blue lighten-5'>
                    <div class='card-content'>
                        <span class='card-title'>Tracks</span>
                        <% tracks.forEach(track => { %>
                            <div class='edit-form'>
                                <p><%=track.name%></p>
                                <form method="POST" action="/track/<%=track.name%>/?_method=DELETE">
                                    <input type='hidden' name='name' value='<%= playlist.name %>'>
                                    <input type="submit" class='btn-small' value="Delete">
                                </form>
                            </div>    
                            <% }) %> 
                    </div>
                </div>
            </div>
                     
                </div>
            </div>
         </div>
      </div>
  </div>
</div>
