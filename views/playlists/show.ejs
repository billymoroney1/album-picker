<div class="valign-wrapper" style="width:100%;height:100%;position: absolute;">
    <div class="valign" style="width:100%;">
        <div class="container">
           <div class="row">
              <div class="col s12 m6 offset-m3">
                 <div class="card hoverable black-text pink darken-1" style="font-size:20px;">
                    <div class="card-content">
                        <span class='card-title center-align' style='font-size:30px;'><%=playlist.name%></span>
                        <br>

                        <% tracks.forEach(track => { %>
                            <p class='flow-text' style='font-size:19px;'><%=track.name%></p>
                        <% }) %> 

                        <br><br>
                        
                        <a class='btn' href='/playlists/<%=playlist.name%>'>Edit</a>
                </div>
            </div>
         </div>
      </div>
  </div>
</div>


